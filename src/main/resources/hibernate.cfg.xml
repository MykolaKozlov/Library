<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <!--диалект с которым работаем-->
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <!--показ выполняемых запросов в дебаг режиме-->
    <property name="hibernate.show_sql">true</property>
    <!--в каком контексте работать сессии hibernate-->
    <property name="hibernate.current_session_context_class">thread</property>
    <!--можно обойтись без явного указания datasource-->
    <property name="hibernate.connection.datasource">jdbc/Library</property>
    <!--имя БД-->
    <property name="hibernate.connection.username">root</property>
    <!--пароль к БД-->
    <property name="hibernate.connection.password">root</property>



    <property name="connection.url">jdbc:mysql://localhost:3306/spring-library</property>
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
      <mapping resource="org/entities/Author.hbm.xml"/>
      <mapping resource="org/entities/Book.hbm.xml"/>
      <mapping resource="org/entities/Genre.hbm.xml"/>
      <mapping resource="org/entities/Publisher.hbm.xml"/>
      <mapping resource="org/entities/Vote.hbm.xml"/>
      <!-- <property name="connection.username"/> -->
    <!-- <property name="connection.password"/> -->

    <!-- DB schema will be updated if needed -->
    <!-- <property name="hbm2ddl.auto">update</property> -->
  </session-factory>
</hibernate-configuration>